<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "dtds/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="-- [%-5p]|%d{yyyy-MM-dd EEE, d MMM HH:mm:ss.SSS}|File: %F|[%C{1} - %M:line %L]|[%t] %l|%m%n" />
		</layout>
	</appender>
 
	<appender name="error_file"
		class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/sistemaconcesionarioErrorFile.log" />
		<param name="MaxFileSize" value="2000000" />
		<param name="MaxBackupIndex" value="100" />
		<param name="Threshold" value="WARN" />
 
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="-- [%-5p]|%d{yyyy-MM-dd EEE, d MMM HH:mm:ss.SSS}|File: %F|[%C{1} - %M:line %L]|[%t] Message: %m%n%n" />
		</layout>
	</appender>
 
	<appender name="debug_file"
		class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/sistemaconcesionarioDebug.log" />
		<param name="MaxFileSize" value="5000000" />
		<param name="MaxBackupIndex" value="100" />
 
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="-- [%-5p]|%d{yyyy-MM-dd EEE, d MMM HH:mm:ss.SSS}|File: %F|[%C{1} - %M:line %L]|[%t] Message: %m%n" />
		</layout>
	</appender>
 
	<appender name="error_file1"
		class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/sistemaconcesionarioErrorFile1.log" />
		<param name="MaxFileSize" value="2000000" />
		<param name="MaxBackupIndex" value="100" />
		<param name="Threshold" value="WARN" />
 
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="-- [%-5p]|%d{yyyy-MM-dd EEE, d MMM HH:mm:ss.SSS}|File: %F|[%C{1} - %M:line %L]|[%t] Message: %m%n" />
		</layout>
	</appender>
	
	<appender name="error_file2"
		class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="logs/sistemaconcesionarioErrorFile2.log" />
		<param name="MaxFileSize" value="2000000" />
		<param name="MaxBackupIndex" value="100" />
		<param name="Threshold" value="WARN" />
 
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="-- [%-5p]|%d{yyyy-MM-dd EEE, d MMM HH:mm:ss.SSS}|File: %F|[%C{1} - %M:line %L]|[%t] Message: %m%n" />
		</layout>
	</appender>
 
	<root>
		<level value="warn" />
		<appender-ref ref="console" />
		<appender-ref ref="error_file" />
	</root>
 
	<category name="logs.debug">
		<priority value="debug" />
		<appender-ref ref="debug_file" />
	</category>
	
	<category name="logs.logerrorfile1">
		<appender-ref ref="error_file1" />
	</category>
 
	<category name="logs.logerrorfile2">
		<appender-ref ref="error_file2" />
	</category>
</log4j:configuration>